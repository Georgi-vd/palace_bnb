<div class = container>
  <h3>New palace</h3><br>
    <%= form_for @palace do |f| %>
      <div class="form-group">
        <%= f.label :name, "Enter the name of your palace" %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description, "Enter a description" %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :location, "Enter a location" %>
        <%= f.text_field :location, class: 'form-control' %>
      </div>
       <div class="form-group">
        <%= f.label :price, "Enter a price" %>
        <p><%= f.number_field :price, class: 'form-control' %> CHF </p>
      </div>
      <div class="form-group">
        <%= cl_image_tag @palace.photo, height: 100, width: 200, crop: :fill %>
      </div>
        <%= f.submit 'Create my palace', class: 'btn btn-primary' %>
    <% end %>
</div>
