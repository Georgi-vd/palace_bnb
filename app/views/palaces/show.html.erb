<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="palace-show-card">
        <h1><%= @palace.name %></h1>
      </div>
      <br>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="https://img.gtsstatic.net/reno/imagereader.aspx?imageurl=http%3A%2F%2FRealEstateAdminImages.gabriels.net%2F170%2F141%2F170-20180429074349328-974.jpg&option=N&idlisting=listingmedia&w=1600&permitphotoenlargement=false&fallbackimageurl=https%3A%2F%2Fstatic-christiesrealestate-cms-production-4.gtsstatic.net%2Fresources%2F_responsive%2Fimages%2Fcommon%2Fnophoto%2Flisting.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1531257240678-d5b1922e672d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://images.unsplash.com/photo-1561042771-abb14f50b8f4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" class="d-block w-100" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <br>
      <div class="palace-show-card">
        <h4>A bit more about this palace...</h4>
        <div class="flex">
          <div class="flex">
            <p><%= @palace.description %></p>
            <p><%= @palace.location %></p>
            <p class = "price"><%= @palace.price %> CHF</p>
          </div>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="palace-show-card">
        <button type="button" class="btn btn-outline-dark"><%= link_to "Book this palace!", new_palace_booking_path(@palace) %></button>
        <br>
        <%= link_to palaces_path(@palace) do %>
          <i class="fas fa-arrow-left"></i>
        <% end %>
      </div>
      <%= link_to "Edit palace", edit_palace_path(@palace) %>
    </div>
  </div>
</div>

