<div class="banner">
  <div class="container">
    <h1>Luxury Homes</h1>
    <p>The holidays you deserve</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-8 mt-3">
      <% @palaces.each do |pal| %>
        <%= link_to palace_path(pal) do %>
          <div class="card-palace">
            <%= image_tag 'https://source.unsplash.com/collection/8751926', alt: "Palace" %>
            <div class="card-palace-infos">
              <div>
                <h3><%= pal.name %></h3>
                <p><%= pal.description %></p>
              </div>
              <h2 class="card-palace-pricing"> <%= pal.price %> CHF</h2>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-4 mt-3">
      <div class="sidemap-card sticky-top border">
        <div style="background-image: url('https://images.unsplash.com/photo-1532154066703-3973764c81fe?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2434&q=80')" class="p-3 b-image">
          <p>Map... Coming soon</p>
        </div>
      </div>
    </div>
  </div>
</div>


