<div class="banner">
  <div class="container">
    <div class="banner-text">
      <h1>Luxury Homes</h1>
      <p>The holidays you deserve</p>
    </div>
  </div>
</div>




<div class="container">
  <div class="row">
    <div class="intro">
      <h3>Choose your ideal palace</h3>
    </div>

    <div class="col-8 mt-3">
      <div class="cards">
        <% @palaces.each do |pal| %>
          <%= link_to palace_path(pal) do %>
            <div class="card-palace mb-3" style="max-width: 540px;">
              <div class="row no-gutters">
                <div class="col-md-4">
                  <%= image_tag'https://source.unsplash.com/collection/8751926', alt: "Palace", class: "card-img" %>
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h3 class="card-title"><%= pal.name %></h3>
                    <p class="card-text"><%= pal.description %></p>
                    <p class="card-text"><small class="text-muted"><%= pal.price %> CHF</small></p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-4 mt-3 map-card sticky-top border">
      <p>Ceci est une carte</p>
      <div class="col-4 mt-3"
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>

  </div>
</div>





